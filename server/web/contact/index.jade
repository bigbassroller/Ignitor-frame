extends ../layouts/default

block head
  title Contact Us

block neck
  link(rel='stylesheet', href='public/layouts/frame.css')

block feet
  //- script(src='/views/contact/index.min.js?#{cacheBreaker}')

block body
  div.row
    div.col-sm-6
      div.page-header
        h1 Send A Message
      div#contact
        form
          div.form-group(class='')
            label Your Name:
            input.form-control(type='text', name='name', value='')
            span.help-block 
          div.form-group(class='')
            label Your Email:
            input.form-control(type='text', name='email', value='')
            span.help-block 
          div.form-group(class='')
            label Message:
            textarea.form-control(name='message', rows='5') 
            span.help-block 
          div.form-group
            button.btn.btn-primary.btn-contact(type='button') Send Message
    div.col-sm-6.special
      div.page-header
        h1 Contact Us
      p.lead Freddy can't wait to hear from you.
      i.fa.fa-reply-all.super-awesome
      address 1428 Elm Street &bull; San Francisco, CA 94122



