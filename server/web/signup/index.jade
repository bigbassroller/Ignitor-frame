extends ../layouts/default

block head
  title Sign Up

block neck
    link(rel='stylesheet', href='public/pages/signup/index.css')

block feet
  //- script(src='/views/signup/index.min.js?#{cacheBreaker}')

block body
  div.row
    div.col-sm-6
      div.page-header
        h1 Sign Up
      form.
        <div class="form-group">
          <label>Pick a Username:</label>
          <input type="text" name="username" class="form-control">
        </div>
        <div class="form-group">
          <label>Enter your Email:</label>
          <input type="email" name="email" class="form-control">
        </div>
        <div class="form-group">
          <label>Create a Password:</label>
          <input type="password" name="password" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary btn-signup">Create My Account</button>
    
    div.col-sm-6.marketing
      div.page-header
        h1 Campy Benefits
      p.lead Really, you will love it inside. It's super great!
      i.fa.fa-thumbs-o-up.super-awesome


